<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/main_layout"
    android:orientation="vertical"
    tools:context="main.baidumaplocation.activity.HomePagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbx_gaode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_sbw"
            android:button="@null"
            android:drawablePadding="@dimen/space_10dp"
            android:drawableTop="@mipmap/about_v3_icon"
            android:elevation="@dimen/space_10dp"
            android:text="高德地图"/>

        <CheckBox
            android:id="@+id/cbx_baidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20dp"
            android:background="@drawable/bt_sbw"
            android:button="@null"
            android:drawablePadding="@dimen/space_10dp"
            android:drawableTop="@mipmap/icon_baidu_map"
            android:elevation="@dimen/space_10dp"
            android:gravity="center"
            android:text="百度地图"/>

    </LinearLayout>

    <!--<SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2500"
        android:progress="2"/>-->

    <SeekBar
        android:max="2500"
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="@dimen/space_10dp"
        android:id="@+id/tv_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20dp"
        android:gravity="center"/>
</LinearLayout>
